<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>gr.aueb.cf.schoolapp.controller.AuthFilter</filter-class>
        <init-param>
            <param-name>priority</param-name>
            <param-value>1</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/schoolapp/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>GrFilter</filter-name>
        <filter-class>gr.aueb.cf.schoolapp.controller.GrFilter</filter-class>
        <init-param>
            <param-name>priority</param-name>
            <param-value>2</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>GrFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>